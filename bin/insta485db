#!/bin/bash
# insta485db


# Stop on errors
# See https://vaneyckt.io/posts/safer_bash_scripts_with_set_euxo_pipefail/
set -Eeuo pipefail


# Sanity check command line options
usage() {
  echo "Usage: $0 (create|destroy|reset|dump)"
}


if [ $# -ne 1 ]; then
  usage
  exit 1
fi


# Parse argument.  $1 is the first argument
case $1 in
  "create")
    if [ ! -d "var/insta485.sqlite3" ]; then
    mkdir -p var/uploads
    sqlite3 var/insta485.sqlite3 < sql/schema.sql
    sqlite3 var/insta485.sqlite3 < sql/data.sql
    cp sql/uploads/* var/uploads/
    else
        echo "var/uploads already exists, skipping creation"
    fi
    ;;


  "destroy")
    rm -rf var/insta485.sqlite3 var/uploads
    ;;


  "reset")
    rm -rf var/insta485.sqlite3 var/uploads
    mkdir -p var/uploads
    sqlite3 var/insta485.sqlite3 < sql/schema.sql
    sqlite3 var/insta485.sqlite3 < sql/data.sql
    cp sql/uploads/* var/uploads/
    ;;


  "dump")
    sqlite3 var/insta485.sqlite3 ".dump"
    ;;
  *)
    usage
    exit 1
    ;;
esac
